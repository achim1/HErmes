#lines
# available linestyles ['-' | '--' | '-.' | ':' | 'None' | ' ' | '']
lines.linewidth       : 1.7
lines.markersize      : 2.5
lines.markeredgewidth : 1.3

#axes
axes.titlesize   : 12
axes.labelsize   : 12
axes.linewidth   : 2.
#axes.labelweight : bold

#grid
grid.linewidth : .4
grid.linestyle : -.
grid.color     : black
grid.alpha     : .5

#ticks
xtick.labelsize  : 12
xtick.major.size : 7
xtick.minor.size : 5
xtick.major.pad  : 10
ytick.labelsize  : 12
ytick.major.size : 7
ytick.minor.size : 5


#font
font.family      : serif
font.sans-serif  : GillSans
#font.serif       : TeX Gyre Pagella
font.serif       : Palatino
font.weight      : bold
font.size        : 12

#legend
legend.fontsize    : 12
legend.markerscale : 1
legend.numpoints   : 1

#text
text.usetex : True 

#backends
pdf.use14corefonts : True
ps.useafm : True
